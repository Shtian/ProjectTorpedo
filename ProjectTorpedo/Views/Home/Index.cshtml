<div class="greeting-container">
@if(Request.IsAuthenticated)
{
    <h2>Hello, @User.Identity.Name!</h2>

}else
{
    <h2>Welcome to @ProjectTorpedo.Util.Global.ProjectName!</h2>
    <p class="center-text">
    @Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new {data_dialog_title = "Identification", @class = "btn btn-primary btn-large"})
    </p>
    <h3 class="center-text">Don't have an account?</h3>
    <p class="center-text">
    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new {data_dialog_title = "Registration", @class = "btn btn-large"})
    </p>
}

</div>